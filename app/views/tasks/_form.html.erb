<%= form_with(model: task, class: "contents") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-green-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul class="list-disc ml-6">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :Nombre %>
    <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:name].none?, "border-red-400 focus:outline-red-600": task.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :Descripción %>
    <%= form.text_field :description, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:description].none?, "border-red-400 focus:outline-red-600": task.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :Fecha_límite %>
    <%= form.date_field :due_date, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:due_date].none?, "border-red-400 focus:outline-red-600": task.errors[:due_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :Categoría %>
    <%= form.collection_select :category_id, Category.all, :id, :name, propmt: "Selecciona una categoria", class: ["underline"]  %>
  </div>

  <div class="inline">
    <button type="submit" class= "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer">Guardar tarea</button>
  </div>
<% end %>
